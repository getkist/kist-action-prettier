{
  "name": "@getkist/action-prettier",
  "version": "1.0.7",
  "description": "Prettier code formatting action for kist",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "kist",
    "prettier",
    "format",
    "code-formatting",
    "plugin"
  ],
  "author": "kist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/getkist/kist-action-prettier.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "prettier": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "eslint": "^10.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "kist": ">=0.1.58"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
